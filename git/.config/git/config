[core]
    pager = diffr --colors refine-added:background:0x03,0x3a,0x16:foreground:10:nobold --colors refine-removed:background:52:foreground:9:nobold | less -FRX --mouse
[interactive]
    diffFilter = diffr --colors refine-added:background:0x03,0x3a,0x16:foreground:10:nobold --colors refine-removed:background:52:foreground:9:nobold | less -FRX --mouse
[diff]
    algorithm = histogram
    colorMoved = zebra
[color "diff"]
    whitespace = dim green ul
    meta = cyan dim italic
    func = dim bold ul
[color "status"]
    changed = yellow
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 52
    newNormal = green
    newHighlight = green 22
[commit]
    verbose = true
[init]
    defaultBranch = master
[pull]
    ff = only
[rebase]
    autoSquash = true
    missingCommitsCheck = warn
[branch]
    sort = -committerdate
[grep]
    lineNumber = true
[transfer]
    fsckObjects = true
[alias]
    ll = log --oneline --graph --decorate --color
    rgrep = "! f(){ git grep "$@" $(git rev-list --all); }; f"
    rrgrep = ! git rev-list --all | xargs git grep
    reset-file = checkout @ --
    amend-hard = ! export GIT_COMMITTER_DATE="$(git log -1 --date=unix --format=%ad)" \
                   && git commit --amend --date="$GIT_COMMITTER_DATE"
    rebase-hard = rebase --committer-date-is-author-date
    force-pull = ! git fetch && git reset --hard @{upstream}
    diff-path = ! git diff $2:$1 $1 && :
[url "https://aur.archlinux.org/"]
    insteadOf = aur:
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[filter "spacify"]
    clean = expand --tabs=4 --initial
[filter "tabify"]
    clean = unexpand --tabs=4 --first-only
