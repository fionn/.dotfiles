[user]
    name = Fionn Fitzmaurice
    email = fionn@github.com
    signingkey = A0DFF3499910E46658E6E4FFCE043F62435B963B
[core]
    pager = /usr/share/git/diff-highlight/diff-highlight | less -FRX --mouse
[interactive]
    diffFilter = /usr/share/git/diff-highlight/diff-highlight | less -FRX --mouse
[diff]
    algorithm = histogram
    colorMoved = zebra
[color "diff"]
    whitespace = blue
    meta = dim
[color "status"]
    changed = yellow
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 52
    newNormal = green
    newHighlight = green 22
[commit]
    verbose = true
[init]
    defaultBranch = master
[pull]
    ff = only
[branch]
    sort = -committerdate
[grep]
    lineNumber = true
[transfer]
    fsckObjects = true
[alias]
    ll = log --oneline --graph --decorate --color
    rgrep = "! f(){ git grep "$@" $(git rev-list --all); }; f"
    rrgrep = ! git rev-list --all | xargs git grep
    reset-file = checkout @ --
    amend-hard = ! export GIT_COMMITTER_DATE="$(git log -1 --date=unix --format=%ad)" \
                   && git commit --amend --date="$GIT_COMMITTER_DATE"
    diff-path = ! git diff $2:$1 $1 && :
    churn = ! git log --all -M -C --name-only --format="format:" "$@" | sort | grep -v "^$" | uniq -c | sort -n
[url "https://aur.archlinux.org/"]
    insteadOf = aur:
[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
[filter "spacify"]
    clean = expand --tabs=4 --initial
[filter "tabify"]
    clean = unexpand --tabs=4 --first-only
